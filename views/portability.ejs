                <input type="text" id="conductivity" name="conductivity" placeholder="conductivity value"
                    value="<%= conductivity %>" required>

                <label for="organic_carbon">Organic Carbon:</label>
                <input type="text" id="organic_carbon" name="organic_carbon" placeholder="organic carbon value"
                    value="<%= organic_carbon %>" required>

                <label for="trihalomethanes">Trihalomethanes:</label>
