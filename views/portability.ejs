                <input type="text" id="solids" name="solids" placeholder="solids value" value="<%= solids %>" required>

                <label for="chloramines">Chloramines:</label>
                <input type="text" id="chloramines" name="chloramines" placeholder="chloramines value"
                    value="<%= chloramines %>" required>

